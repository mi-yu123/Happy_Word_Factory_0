<h1>Happy Word <%= action_name == 'new' ? '作成' : '編集' %></h1>

<%= form_with model: @happy, url: action_name == 'new' ? admin_happies_path : admin_happy_path(@happy), local: true do |form| %>
  <div>
    <%= form.label :text, 'テキスト' %>
    <%= form.text_field :text, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-success' %>
<% end %>
