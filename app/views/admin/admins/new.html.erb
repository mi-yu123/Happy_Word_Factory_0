<h1 class="text-4xl font-bold text-center my-8">幸せを支配するもの</h1>

<%= form_with url: admin_login_path, method: :post, local: true, turbo: false do |form| %>
  <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg">
    
    <div class="mb-4">
      <%= form.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :email, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.submit "ログイン", class: "w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50" %>
    </div>
    
  </div>
<% end %>
