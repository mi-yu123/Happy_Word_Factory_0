<div class="container my-5">
  <h1 class="text-center mb-4">幸せの管理</h1>

  <div class="mb-5">
    <h2 class="mb-3">Happy Words 一覧</h2>
    <%= link_to 'Happy Word を追加', new_admin_happy_path, class: 'btn btn-primary mb-3' %>

    <% if @happies.any? %>
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>テキスト</th>
            <th>作成日</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @happies.each do |happy| %>
            <tr id="<%= dom_id(happy) %>">
              <td><%= happy.id %></td>
              <td><%= happy.text %></td>
              <td><%= happy.created_at.strftime('%Y-%m-%d %H:%M') %></td>
              <td>
                <%= link_to '編集', edit_admin_happy_path(happy), class: 'btn btn-secondary btn-sm' %>
                <%= link_to '削除', admin_happy_path(happy),
                            method: :delete,
                            data: { confirm: '本当に削除しますか？' },
                            class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">現在、Happy Words は登録されていません。</p>
    <% end %>
  </div>

  <div>
    <h2 class="mb-3">Unhappy Words 一覧</h2>
    <%= link_to 'Unhappy Word を追加', new_admin_unhappy_path, class: 'btn btn-primary mb-3' %>

    <% if @unhappies.any? %>
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>テキスト</th>
            <th>作成日</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @unhappies.each do |unhappy| %>
            <tr id="<%= dom_id(unhappy) %>">
              <td><%= unhappy.id %></td>
              <td><%= unhappy.text %></td>
              <td><%= unhappy.created_at.strftime('%Y-%m-%d %H:%M') %></td>
              <td>
                <%= link_to '編集', edit_admin_unhappy_path(unhappy), class: 'btn btn-secondary btn-sm' %>
                <%= link_to '削除', admin_unhappy_path(unhappy),
                            method: :delete,
                            data: { confirm: '本当に削除しますか？' },
                            class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">現在、Unhappy Words は登録されていません。</p>
    <% end %>
  </div>
</div>
